#include <iostream>
#include <string>

using namespace std;

#define MAXN_M 200

string maze[MAXN_M];

int foo[MAXN_M][MAXN_M][2];

int n;

int m;

int main() {
	//输入数据
	cin >> n >> m;
	for (int i = 0; i < n; i++) {
		cin >> maze[i];
	}
	//初始化
	int max = n * m * 10;
	for (int i = 0; i < n; i++) {
		for (int j = 0; j < m; j++) {
			foo[i][j][0] = max;
			foo[i][j][1] = max;
		}
	}
	for (int i = n - 1; i >=0; i--) {
		for (int j = m - 1; j >= 0; j--) {
			int b = (maze[i][j] == '.') ? 0 : 1;
			if (i == n - 1 && j == m - 1) {
				foo[i][j][0] = b;
				foo[i][j][1] = b;
			} else {
				if (i == n - 1) {
					foo[i][j][0] = foo[i][j + 1][0] + b;
					foo[i][j][1] = foo[i][j + 1][0] + b;
				} else if (j == m - 1) {
					foo[i][j][0] = foo[i + 1][j][1] + b;
					foo[i][j][1] = foo[i + 1][j][1] + b;
				} else {
					int br = (maze[i][j + 1] == '.') ? 0 : 1;
					int bd = (maze[i + 1][j] == '.') ? 0 : 1;

					foo[i][j][0] = foo[i][j + 1][0] + b;
					if (br == 1) {
						int tmp = foo[i + 1][j][1] + b;
						if (tmp < foo[i][j][0]) {
							foo[i][j][0] = tmp;
						}
					}

					foo[i][j][1] = foo[i + 1][j][1] + b;
					if (bd == 1) {
						int tmp = foo[i][j + 1][0] + b;
						if (tmp < foo[i][j][1]) {
							foo[i][j][1] = tmp;
						}
					}
				}
			}
		}
	}
	cout << foo[0][0][0] << endl;
	return 0;
}
